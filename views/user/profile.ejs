<div class="container">
  <div class='row justify-content-center'>
    <h2>USer Profile</h2>
  </div>
  <div class='row justify-content-center'>
    <form>
      <div class='row justify-content-center'>
        <div class='col-sm-6'>
          <div class="form-group">
            <label for="emailAddress">Email address</label>
            <input v-model="user.email" type="email" class="form-control">
          </div>
            <button @click.prevent="submit_update_email" class="btn btn-primary">Update Email</button>

        </div>
        <div class='col-sm-6'>
          <div class="form-group">
            <label for="updatePassword">Update Password</label>
            <input v-model="update_password" type="password" class="form-control">
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input v-model="confirm_password" type="password" class="form-control">
          </div>
            <button @click.prevent="submit_update_password" class="btn btn-primary">Update Password</button>

        </div>
      </div>
    </form>

  </div>
</div>

